<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.javahelp.frontend.LoginViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/b2"
        tools:context=".frontend.LoginActivity">


        <TextView
            android:id="@+id/tv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Welcome"
            android:maxLines="1"
            android:textSize="30dp"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bot_c_reg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#08FFFFFF"
                android:text=" Client
             Register"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/bot_p_reg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#0CFFFFFF"
                android:text="Provider Register"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_bg"
            android:drawableLeft="@drawable/user48"
            android:drawablePadding="5dp"
            android:hint="Username"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:text="@={data.username}"
            android:textColor="@color/white"
            android:textSize="20sp"

            />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_bg"
            android:drawableLeft="@drawable/passwordicon"
            android:drawablePadding="5dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:text="@={data.password}"
            android:textColor="@color/white"

            android:textSize="20sp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#19ECEBEB"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="20dp"


            />

        <TextView
            android:id="@+id/loginErrorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login Error Message"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateTint="#FFFFFF"
            android:visibility="gone" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="150dp" />

        <CheckBox
            android:id="@+id/staySignedIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            android:text="Stay Signed In"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:gravity="bottom"
            android:text="By Java Help" />


    </LinearLayout>
</layout>